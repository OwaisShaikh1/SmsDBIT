# Environment variables for SMS Portal Backend

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for development, change for production)
DATABASE_URL=sqlite:///db.sqlite3

# MySMSMantra API Configuration
MYSMSMANTRA_API_URL=https://api.mylogin.co.in/api/v2/SendSMS
MYSMSMANTRA_API_KEY=your-api-key-here
MYSMSMANTRA_CLIENT_ID=your-client-id-here
MYSMSMANTRA_SENDER_ID=your-sender-id-here

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=24  # hours

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173